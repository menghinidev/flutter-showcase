    "version": "0.2.0",
    "configurations": [
        {
            "name": "Web (debug mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "program": "lib/main.dart",
            "args": [
                "-d",
                "chrome",
            ],
            "toolArgs": [
                "--dart-define",
                "ENV=Dev"
            ]
        },
        {
            "name": "sandbox (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "sandbox (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}